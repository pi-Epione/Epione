	public boolean isValidEmail(String email){
		 boolean isValid = false;
		try {
			InternetAddress internetAdresse = new InternetAddress(email);
			internetAdresse.validate();
			isValid = true;
		} catch (AddressException e) {
			isValid = false;
		}
		return isValid;
		
	}
}
